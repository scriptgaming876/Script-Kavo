local function createESP(target, color)
    local esp = Instance.new("BillboardGui", target)
    esp.Adornee = target
    esp.Size = UDim2.new(4, 0, 1, 0)
    esp.AlwaysOnTop = true

    local text = Instance.new("TextLabel", esp)
    text.Size = UDim2.new(1, 0, 1, 0)
    text.BackgroundTransparency = 1
    text.Text = target.Parent.Name
    text.TextColor3 = color
    text.TextStrokeTransparency = 0
    text.Font = Enum.Font.SourceSansBold
    text.TextScaled = true
end

local function vampireESP()
    while task.wait(1) do
        for _, model in pairs(workspace:GetDescendants()) do
            if model:IsA("Model") and model:FindFirstChild("Humanoid") and model.Name:lower():find("vampire") then
                local hrp = model:FindFirstChild("HumanoidRootPart") or model.PrimaryPart
                if hrp and not hrp:FindFirstChildOfClass("BillboardGui") then
                    createESP(hrp, Color3.fromRGB(128, 0, 128)) -- Purple color for Vampires
                end
            end
        end
    end
end

vampireESP()
